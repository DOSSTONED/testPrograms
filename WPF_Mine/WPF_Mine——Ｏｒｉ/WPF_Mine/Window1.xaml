<Window x:Class="WPF_Mine.Sweeper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Mine Sweeper" Height="302" Width="285" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid >
        <Thumb Background="Transparent" DragDelta="Thumb_DragDelta" Opacity="0"></Thumb>
        <Button Height="23" HorizontalAlignment="Left" Margin="5" Name="buttonStartNew" VerticalAlignment="Top" Width="75" Click="buttonStartNew_Click">New</Button>
        <Label Height="28" Margin="100,5,0,0" Name="labelBomb" VerticalAlignment="Top" HorizontalAlignment="Left" Width="77">Bombs : 100</Label>
        <Label Height="28" Margin="198,5,0,0" Name="labelTime" VerticalAlignment="Top" HorizontalAlignment="Left" Width="41">Time :</Label>
        <Label Height="28" HorizontalAlignment="Left" Margin="235,5,0,0" Name="labelSpendTime" VerticalAlignment="Top" Width="56">0</Label>
        <Grid Margin="29,33,0,0" Name="gridBombZone" Width="210" HorizontalAlignment="Left" Height="210" VerticalAlignment="Top" ></Grid>
    </Grid>
</Window>
