<Window x:Class="Word_6000_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" FontSize="16" Closing="Window_Closing">
    <Grid>
        <ProgressBar Height="50" Name="progressBar1" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Thumb x:Name="thumbLoading" Background="#00000000"/>
            
        <ScrollViewer x:Name="MyScrollViewer" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="12,0,0,12">
            <WrapPanel Name="listViewWords" Width="{Binding ElementName=MyScrollViewer, Path=ViewportWidth}" Background="#00000000">
                
            </WrapPanel>
        </ScrollViewer>

    </Grid>
</Window>
