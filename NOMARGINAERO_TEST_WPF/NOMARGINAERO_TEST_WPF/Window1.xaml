<Window x:Class="NOMARGINAERO_TEST_WPF.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300" WindowStyle="None" Loaded="Window_Loaded" >
    <Grid>
        <Thumb Opacity="0" Background="{x:Null}" Name="DragThumb" DragDelta="DragThumb_DragDelta" />
        <Button Height="23" HorizontalAlignment="Left" Name="button1" VerticalAlignment="Bottom" Width="75" Click="button1_Click" Background="Transparent" Margin="5">Activity</Button>
        <Button Height="23" HorizontalAlignment="Right" Name="button2" VerticalAlignment="Bottom" Width="75" Click="buttonClose_Click" Margin="5">Exit</Button>
        <ListBox Margin="5,36" Name="listBox1" Background="Azure" />
        <Button Height="23" HorizontalAlignment="Right" Name="buttonClose" VerticalAlignment="Top" Width="23" Margin="0,5,5,0" Background="Transparent" Click="buttonClose_Click">X</Button>
    </Grid>
</Window>
